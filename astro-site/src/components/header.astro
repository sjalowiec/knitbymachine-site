/* src/components/Header.astro - Updated Design */
---
<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

:root {
  --kbm-green: #52682d;
  --kbm-green-hover: #445626;
  --kbm-bg: #e9ece7;
  --page-bg: #f7f8f7;
  --ring: #e5e8e0;
}

/* ===== FIXED HEADER ===== */
.kbm-header-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: var(--kbm-bg);
  box-shadow: 0 1px 3px rgba(0, 0, 0, .08);
}

.kbm-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ===== TOPBAR ===== */
.kbm-topbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24px;
  padding: 16px 0;
}

/* ===== LOGO ===== */
.kbm-logo {
  text-decoration: none;
  color: var(--kbm-green);
  display: flex;
  align-items: center;
  gap: 16px;
}

.kbm-logo-img {
  width: 60px;
  height: 60px;
  flex-shrink: 0;
}

.kbm-logo-text {
  font-family: "Poppins", sans-serif;
  font-size: 2.5rem;
  font-weight: 700;
  letter-spacing: -0.5px;
  line-height: 1;
  color: var(--kbm-green);
}

/* ===== NAV ===== */
.kbm-nav {
  position: relative;
  z-index: 1100;
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.kbm-menu {
  display: flex;
  align-items: center;
  gap: 32px;
  margin: 0;
  padding: 0;
  list-style: none;
  font-family: "Poppins", sans-serif;
}

.kbm-menu > li > a {
  color: var(--kbm-green);
  text-decoration: none;
  font-weight: 600;
  font-size: 1.1rem;
  padding: 8px 0;
  display: inline-flex;
  align-items: center;
  gap: 4px;
  transition: color 0.2s ease;
}

.kbm-menu > li > a:hover {
  color: var(--kbm-green-hover);
}

.caret {
  font-size: 1.4em;
  margin-left: 2px;
}

/* ===== DROPDOWNS ===== */
.dd {
  position: relative;
}

.dd-panel {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  transform: translateY(8px) scale(0.98);
  min-width: 200px;
  background: #ffffff;
  border: 1px solid var(--ring);
  border-radius: 8px;
  box-shadow: 0 4px 12px rgba(0, 0, 0, .15);
  padding: 8px 0;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity .2s ease, transform .2s ease;
  z-index: 1200;
}

/* Position last two dropdowns from the right to prevent overflow */
.kbm-menu > li:nth-last-child(1) .dd-panel,
.kbm-menu > li:nth-last-child(2) .dd-panel {
  left: auto;
  right: 0;
}

.dd.open > .dd-panel,
.dd:hover > .dd-panel {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
  transform: translateY(0) scale(1);
}

.dd-panel li {
  list-style: none;
}

.dd-panel a {
  display: block;
  padding: 10px 16px;
  color: var(--kbm-green);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.95rem;
  transition: background 0.2s ease;
}

.dd-panel a:hover {
  background: rgba(82, 104, 45, .08);
}

/* ===== SEARCH BAR ===== */
.kbm-searchbar {
  background: var(--kbm-bg);
  padding: 12px 0 16px;
}

.kbm-search-wrap {
  display: flex;
  align-items: stretch;
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
}

.kbm-search-input {
  flex: 1;
  padding: 12px 18px;
  font-size: 1rem;
  font-family: "Poppins", sans-serif;
  border: 2px solid #d0d0d0;
  border-right: none;
  border-radius: 8px 0 0 8px;
  background: #ffffff;
}

.kbm-search-input:focus {
  outline: none;
  border-color: var(--kbm-green);
}

.kbm-search-btn {
  background: var(--kbm-green);
  color: #fff;
  border: none;
  padding: 12px 24px;
  border-radius: 0 8px 8px 0;
  cursor: pointer;
  font-size: 1.1rem;
  transition: background 0.2s ease;
}

.kbm-search-btn:hover {
  background: var(--kbm-green-hover);
}

/* ===== HAMBURGER MENU ===== */
.kbm-hamburger {
  display: none;
  flex-direction: column;
  gap: 5px;
  background: none;
  border: none;
  padding: 8px;
  cursor: pointer;
  z-index: 1300;
}

.kbm-hamburger span {
  width: 28px;
  height: 3px;
  background: var(--kbm-green);
  border-radius: 2px;
  transition: all 0.3s ease;
}

.kbm-hamburger.active span:nth-child(1) {
  transform: rotate(45deg) translate(8px, 8px);
}

.kbm-hamburger.active span:nth-child(2) {
  opacity: 0;
}

.kbm-hamburger.active span:nth-child(3) {
  transform: rotate(-45deg) translate(8px, -8px);
}

/* ===== RESPONSIVE ===== */
@media (max-width: 1024px) {
  .kbm-hamburger {
    display: flex;
  }

  .kbm-logo-text {
    font-size: 2rem;
  }

  .kbm-logo-img {
    width: 50px;
    height: 50px;
  }

  .kbm-nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 320px;
    max-width: 85vw;
    height: 100vh;
    background: var(--kbm-bg);
    box-shadow: -4px 0 12px rgba(0, 0, 0, .1);
    transition: right 0.3s ease;
    overflow-y: auto;
    padding-top: 80px;
  }

  .kbm-nav.mobile-open {
    right: 0;
  }

  .kbm-menu {
    flex-direction: column;
    align-items: stretch;
    gap: 0;
    padding: 20px;
  }

  .kbm-menu > li > a {
    padding: 14px 16px;
    display: block;
    font-size: 1.1rem;
  }

  .kbm-menu .dd-panel {
    position: static !important;
    left: auto !important;
    right: auto !important;
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transform: none !important;
    box-shadow: none;
    border: none;
    margin-left: 0;
    margin-top: 8px;
    padding-left: 20px;
    background: transparent;
    display: none;
    width: 100%;
    max-width: 100%;
  }

  .kbm-menu .dd.open > .dd-panel {
    display: block;
  }

  .kbm-menu .dd-panel li {
    margin: 0;
  }

  .kbm-menu .dd-panel a {
    display: block;
    padding: 10px 16px;
    font-size: 1rem;
    color: var(--kbm-green);
    white-space: normal;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .kbm-search-wrap {
    max-width: 100%;
  }
}

@media (max-width: 600px) {
  .kbm-container {
    padding: 0 16px;
  }

  .kbm-logo-text {
    font-size: 1.6rem;
  }

  .kbm-logo-img {
    width: 45px;
    height: 45px;
  }

  .kbm-search-input {
    padding: 10px 14px;
    font-size: 0.95rem;
  }

  .kbm-search-btn {
    padding: 10px 18px;
  }

  .kbm-searchbar {
    padding-left: 16px;
    padding-right: 16px;
  }

  .kbm-search-wrap {
    max-width: 100%;
    margin: 0 auto;
  }
}

@media (max-width: 400px) {
  .kbm-container {
    padding: 0 12px;
  }

  .kbm-logo-text {
    font-size: 1.4rem;
  }

  .kbm-topbar {
    gap: 12px;
  }

  .kbm-searchbar {
    padding-left: 12px;
    padding-right: 12px;
  }
}

/* Hide header when printing */
@media print {
  .kbm-header-wrap {
    display: none !important;
  }
}
</style>

<section class="kbm-header-wrap">
  <header class="kbm-header">
    <div class="kbm-container kbm-topbar">
      <a href="/" class="kbm-logo">
        <img src="/images/kbm_logo.svg" alt="Knit by Machine Logo" class="kbm-logo-img" />
        <div class="kbm-logo-text">Knit by Machine</div>
      </a>

      <!-- Hamburger button for mobile -->
      <button class="kbm-hamburger" aria-label="Toggle menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <nav class="kbm-nav" aria-label="Primary">
        <ul class="kbm-menu">
          <li class="dd">
            <a href="/wizards-catalog">Patterns <span class="caret">▾</span></a>
            <ul class="dd-panel">
              <li><a href="/wizards-catalog?category=Pattern">Pattern</a></li>
              <li><a href="/wizards-catalog?category=Tools">Tools</a></li>
              <li><a href="/wizards-catalog?category=Practice">Practice</a></li>
              <li><a href="/smart-guides-coming-soon">Smart Guides</a></li>
            </ul>
          </li>
          <li><a href="/workshops">Workshops</a></li>
          <li class="dd">
            <a href="#">Resources <span class="caret">▾</span></a>
            <ul class="dd-panel">
              <li><a href="/ana-catalog">Ask 'n Answer</a></li>
              <li><a href="/glossary">Glossary</a></li>
              <li><a href="/sizing-charts">Sizing Charts</a></li>
              <li><a href="/machine-history">Machine History</a></li>
            </ul>
          </li>
          <li class="dd">
            <a href="#">About <span class="caret">▾</span></a>
            <ul class="dd-panel">
              <li><a href="/about">About Us</a></li>
              <li><a href="/contact">Contact</a></li>
              <li><a href="/membership">Membership</a></li>
            </ul>
          </li>
        </ul>
      </nav>
    </div>

    <div class="kbm-searchbar">
      <div class="kbm-container kbm-search-wrap">
        <input class="kbm-search-input" type="search" placeholder="Search..." aria-label="Search" />
        <button class="kbm-search-btn" aria-label="Submit search"><i class="fas fa-search"></i></button>
      </div>
    </div>
  </header>
</section>

<script is:inline>
  (() => {
    const dds = document.querySelectorAll('.kbm-menu .dd');
    const isTouchLike =
      matchMedia('(hover: none), (pointer: coarse)').matches || window.innerWidth <= 1024;

    function closeAll(except) {
      dds.forEach(li => {
        if (li !== except) li.classList.remove('open');
      });
    }

    dds.forEach(li => {
      li.addEventListener('mouseenter', () => {
        clearTimeout(li._closeTimeout);
        li.classList.add('open');
      });
      li.addEventListener('mouseleave', () => {
        li._closeTimeout = setTimeout(() => li.classList.remove('open'), 250);
      });
    });

    if (isTouchLike) {
      dds.forEach(li => {
        const trigger = li.querySelector(':scope > a');
        trigger.addEventListener('click', e => {
          e.preventDefault();
          const nowOpen = li.classList.toggle('open');
          if (nowOpen) closeAll(li);
        });
      });
      document.addEventListener('click', e => {
        if (!e.target.closest('.kbm-nav')) closeAll();
      });
    }

    // Hamburger menu toggle
    const hamburger = document.querySelector('.kbm-hamburger');
    const nav = document.querySelector('.kbm-nav');
    
    if (hamburger && nav) {
      hamburger.addEventListener('click', () => {
        const isOpen = nav.classList.toggle('mobile-open');
        hamburger.classList.toggle('active');
        hamburger.setAttribute('aria-expanded', isOpen);
        
        if (isOpen) {
          document.body.style.overflow = 'hidden';
        } else {
          document.body.style.overflow = '';
        }
      });

      document.addEventListener('click', (e) => {
        if (window.innerWidth <= 768 && 
            !nav.contains(e.target) && 
            !hamburger.contains(e.target) && 
            nav.classList.contains('mobile-open')) {
          nav.classList.remove('mobile-open');
          hamburger.classList.remove('active');
          hamburger.setAttribute('aria-expanded', 'false');
          document.body.style.overflow = '';
        }
      });
    }
  })();
</script>
