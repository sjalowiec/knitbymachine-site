---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';

const { pageName = "This Page" } = Astro.props;
const pageTitle = Astro.url.pathname.replace('/', '').replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) || "Coming Soon";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle} - Knit by Machine</title>
  <meta name="description" content="Coming soon to Knit by Machine - machine knitting made easier." />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Shadows+Into+Light+Two&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <link rel="stylesheet" href="/styles/temphome.css" />
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', Arial, sans-serif;
      background-color: #f7f8f7;
    }
    
    .page-content {
      margin-top: 140px;
      min-height: 60vh;
      padding: 60px 20px;
      text-align: center;
    }
    
    .coming-soon-container {
      max-width: 600px;
      margin: 0 auto;
      background: white;
      padding: 60px 40px;
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }
    
    .coming-soon-icon {
      font-size: 72px;
      color: #52682d;
      margin-bottom: 24px;
    }
    
    .coming-soon-container h1 {
      font-size: 2.5rem;
      color: #52682d;
      margin-bottom: 16px;
      font-weight: 700;
    }
    
    .coming-soon-container p {
      font-size: 1.1rem;
      color: #5a5a5a;
      line-height: 1.6;
      margin-bottom: 32px;
    }
    
    .back-link {
      display: inline-block;
      padding: 12px 32px;
      background: #52682d;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 600;
      transition: background 0.3s ease;
    }
    
    .back-link:hover {
      background: #738c52;
    }
    
    @media (max-width: 1024px) {
      .coming-soon-container {
        padding: 40px 24px;
      }
      
      .coming-soon-container h1 {
        font-size: 2rem;
      }
      
      .coming-soon-icon {
        font-size: 56px;
      }
    }
  </style>
</head>
<body>
  <Header />
  
  <main class="page-content">
    <div class="coming-soon-container">
      <div class="coming-soon-icon">
        <i class="fas fa-clock"></i>
      </div>
      <h1>Coming Soon!</h1>
      <p>We're working hard to bring you {pageTitle}. Check back soon for updates!</p>
      <p style="font-size: 0.95rem; color: #888;">In the meantime, explore our Ask 'n Answer catalog for helpful machine knitting tips and techniques.</p>
      <a href="/" class="back-link">Back to Home</a>
    </div>
  </main>
  
  <Footer />
</body>
</html>
