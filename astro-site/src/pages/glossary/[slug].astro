---
export const prerender = false;

import Layout from "../../layouts/layout.astro";

const { slug } = Astro.params;

const GITHUB_TOKEN = import.meta.env.GITHUB_TOKEN || process.env.GITHUB_TOKEN;
const REPO_OWNER = 'sjalowiec';
const REPO_NAME = 'knitbymachine-site';
const CONTENT_PATH = 'astro-site/src/content';

// Helper to normalize image paths - handles full URLs, paths, and bare filenames
function normalizeGlossaryImagePath(imageValue: string | null | undefined): string | null {
  if (!imageValue) return null;
  
  // If it's already a full URL or absolute path, return as-is
  if (imageValue.startsWith('http://') || imageValue.startsWith('https://') || imageValue.startsWith('/')) {
    return imageValue;
  }
  
  // Otherwise, it's just a filename - prepend the glossary images directory
  return `/images/glossary/${imageValue}`;
}

async function getGlossaryTerm(slug: string) {
  try {
    const headers: Record<string, string> = {
      'Accept': 'application/vnd.github.v3+json',
      'User-Agent': 'knitbymachine-astro'
    };
    
    if (GITHUB_TOKEN) {
      headers['Authorization'] = `token ${GITHUB_TOKEN}`;
    }
    
    const response = await fetch(
      `https://api.github.com/repos/${REPO_OWNER}/${REPO_NAME}/contents/astro-site/src/content/glossary/${slug}.json`,
      { headers }
    );

    if (!response.ok) {
      console.error(`Failed to fetch glossary term: ${slug}`, response.status);
      return null;
    }

    const data = await response.json();
    const content = Buffer.from(data.content, 'base64').toString('utf-8');
    const entry = JSON.parse(content);

    // Filter out drafts and pending publish entries
    if (entry.isDraft || entry.pendingPublish) {
      return null;
    }

    // Handle both old format (title/definition/image) and new format (term/description/imageFilename)
    return {
      slug: entry.slug,
      term: entry.term || entry.title,
      abbreviation: entry.abbreviation || '',
      description: entry.description || entry.definition,
      tooltip: entry.tooltip || entry.excerpt || '',
      example: entry.example || '',
      categories: entry.categories || [],
      letter: entry.letter || '',
      imageFilename: normalizeGlossaryImagePath(entry.imageFilename || entry.image),
      imageAlt: entry.imageAlt || '',
      gifFilename: entry.gifFilename || '',
      videoUrl: entry.videoUrl || '',
      isMemberOnly: entry.isMemberOnly || false,
      schemaMarkup: entry.schemaMarkup || null,
      relatedTerms: entry.relatedTerms || [],
      tags: entry.tags || [],
    };
  } catch (error) {
    console.error('Error fetching glossary term:', error);
    return null;
  }
}

async function getRelatedTermsData(relatedSlugs: string[]) {
  const relatedTerms = [];
  for (const relatedSlug of relatedSlugs) {
    const term = await getGlossaryTerm(relatedSlug);
    if (term) {
      relatedTerms.push({ slug: term.slug, term: term.term });
    }
  }
  return relatedTerms;
}

const entry = await getGlossaryTerm(slug);
const relatedTermsData = entry?.relatedTerms ? await getRelatedTermsData(entry.relatedTerms) : [];

if (!entry) {
  return Astro.redirect('/glossary');
}
---

<Layout>
  <style>
    .glossary-entry {
      max-width: 1200px;
      margin: 0 auto;
      padding: 120px 20px 60px;
    }

    .back-link {
      display: inline-block;
      color: var(--kbm-green);
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 2rem;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .two-column-layout {
      display: grid;
      gap: 3rem;
      align-items: start;
    }

    .two-column-layout.has-image {
      grid-template-columns: 400px 1fr;
    }

    .two-column-layout.no-image {
      grid-template-columns: 1fr;
      max-width: 800px;
    }

    .image-column {
      position: sticky;
      top: 120px;
    }

    .glossary-image {
      width: 100%;
      height: auto;
      border-radius: 12px;
      border: 1px solid #e2e6df;
    }

    .content-column {
      min-width: 0;
    }

    .term-title {
      font-size: 2.5rem;
      font-weight: 800;
      color: #1f2937;
      margin: 0 0 0.75rem;
      line-height: 1.2;
    }

    .term-tooltip {
      font-size: 1.2rem;
      color: #6b7280;
      margin: 0 0 1.5rem;
      font-style: italic;
    }

    .term-description {
      font-size: 1.1rem;
      line-height: 1.7;
      color: #374151;
      margin-bottom: 1.5rem;
      white-space: pre-line;
    }

    .term-example {
      background: #f9fafb;
      border-left: 4px solid var(--kbm-green);
      padding: 1rem 1.25rem;
      border-radius: 8px;
      margin: 1.5rem 0;
    }

    .term-example-label {
      font-weight: 700;
      color: var(--kbm-green);
      margin-bottom: 0.5rem;
    }

    .term-example-text {
      color: #374151;
      line-height: 1.6;
      white-space: pre-line;
    }

    .related-terms {
      margin: 1.5rem 0;
      padding: 0;
    }

    .related-terms-label {
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 0.75rem;
      font-size: 1.1rem;
    }

    .related-terms-list {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      align-items: center;
    }

    .related-term-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      color: var(--kbm-green);
      font-weight: 600;
      font-size: 1rem;
      transition: opacity 0.2s;
    }

    .related-term-link:hover {
      opacity: 0.7;
    }

    .related-term-icon {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
    }

    .member-only,
    .non-member-cta {
      margin-top: 2rem;
      padding: 1.5rem;
      border-radius: 12px;
      border: 1px solid #e2e6df;
    }

    .member-only {
      background: #f6f8f2;
    }

    .member-only h3 {
      margin: 0 0 1rem;
      color: #1f2937;
      font-size: 1.3rem;
    }

    .video-player {
      width: 100%;
      aspect-ratio: 16/9;
      border-radius: 8px;
      background: #000;
    }

    .video-player iframe,
    .video-player video {
      width: 100%;
      height: 100%;
      border-radius: 8px;
    }

    .non-member-cta {
      background: linear-gradient(135deg, #f0f4ea 0%, #ffffff 100%);
      text-align: center;
    }

    .non-member-cta p {
      margin: 0 0 1rem;
      font-size: 1.1rem;
      color: #374151;
    }

    .btn-primary {
      display: inline-block;
      background: var(--kbm-green);
      color: #fff;
      padding: 0.75rem 1.5rem;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 700;
      transition: background 0.2s;
    }

    .btn-primary:hover {
      background: #3f5323;
    }

    @media (max-width: 900px) {
      .two-column-layout.has-image,
      .two-column-layout.no-image {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .image-column {
        position: relative;
        top: 0;
      }

      .term-title {
        font-size: 2rem;
      }

      .term-tooltip {
        font-size: 1rem;
      }
    }
  </style>

  <div class="glossary-entry">
    <a href="/glossary" class="back-link">‚Üê Back to Glossary </a>
    
    <div class={`two-column-layout ${entry.imageFilename ? 'has-image' : 'no-image'}`}>
      {entry.imageFilename && (
        <div class="image-column">
          <img
            src={entry.imageFilename}
            alt={entry.imageAlt || entry.term}
            class="glossary-image"
          />
        </div>
      )}

      <div class="content-column">
        <h1 class="term-title">{entry.term}</h1>
        {entry.tooltip && <p class="term-tooltip"><em>{entry.tooltip}</em></p>}

        <p class="term-description">{entry.description}</p>

        {entry.example && (
          <div class="term-example">
            <div class="term-example-label">Example:</div>
            <div class="term-example-text">{entry.example}</div>
          </div>
        )}

        {relatedTermsData && relatedTermsData.length > 0 && (
          <div class="related-terms">
            <div class="related-terms-label">Related terms:</div>
            <div class="related-terms-list">
              {relatedTermsData.map((relatedTerm: any) => (
                <a href={`/glossary/${relatedTerm.slug}`} class="related-term-link">
                  <img 
                    src="https://knitbymachine.com/images/glossary/glossary_logo.svg" 
                    alt=""
                    class="related-term-icon"
                  />
                  {relatedTerm.term}
                </a>
              ))}
            </div>
          </div>
        )}

        {entry.videoUrl && (
          <>
            {entry.isMemberOnly ? (
              <>
                <div class="member-only" data-member="true" style="display:none;">
                  <h3>Watch it in action</h3>
                  <div class="video-player">
                    {entry.videoUrl.includes('youtube.com') || entry.videoUrl.includes('youtu.be') ? (
                      <iframe 
                        src={entry.videoUrl.includes('youtube.com/embed') ? entry.videoUrl : entry.videoUrl.replace('watch?v=', 'embed/').replace('youtu.be/', 'youtube.com/embed/')}
                        title={`Video: ${entry.term}`}
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                      ></iframe>
                    ) : entry.videoUrl.includes('vimeo.com') ? (
                      <iframe 
                        src={entry.videoUrl.replace('vimeo.com/', 'player.vimeo.com/video/')}
                        title={`Video: ${entry.term}`}
                        allow="autoplay; fullscreen; picture-in-picture"
                        allowfullscreen
                      ></iframe>
                    ) : (
                      <video controls src={entry.videoUrl}></video>
                    )}
                  </div>
                </div>

                <div class="non-member-cta" data-member="false">
                  <p>This video is available for members only.</p>
                  <a href="/subscribe" class="btn-primary">Join Now</a>
                </div>
              </>
            ) : (
              <div class="member-only">
                <h3>Watch it in action</h3>
                <div class="video-player">
                  {entry.videoUrl.includes('youtube.com') || entry.videoUrl.includes('youtu.be') ? (
                    <iframe 
                      src={entry.videoUrl.includes('youtube.com/embed') ? entry.videoUrl : entry.videoUrl.replace('watch?v=', 'embed/').replace('youtu.be/', 'youtube.com/embed/')}
                      title={`Video: ${entry.term}`}
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  ) : entry.videoUrl.includes('vimeo.com') ? (
                    <iframe 
                      src={entry.videoUrl.replace('vimeo.com/', 'player.vimeo.com/video/')}
                      title={`Video: ${entry.term}`}
                      allow="autoplay; fullscreen; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  ) : (
                    <video controls src={entry.videoUrl}></video>
                  )}
                </div>
              </div>
            )}
          </>
        )}
      </div>
    </div>
  </div>

  <script>
    const userIsMember = false; // Replace with real membership logic
    if (userIsMember) {
      document.querySelectorAll('[data-member="true"]').forEach(el => (el as HTMLElement).style.display = 'block');
      document.querySelectorAll('[data-member="false"]').forEach(el => (el as HTMLElement).style.display = 'none');
    }
  </script>
</Layout>
